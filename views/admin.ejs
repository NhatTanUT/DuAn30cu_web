					</a>
					<form action="/admin/class" method="POST" class="form-add-class">
						<label for="classid">ID lớp</label><br>
						<input type="text" name="classid"><br>
						<label for="classname">Tên lớp</label><br>
						<input type="text"name="classname"><br><br>
						<input type="submit" value="Submit">
					  </form> 
					<div class="card-content">
						<table>
							<thead>
								<tr>
									<th>STT</th>
									<th>ID Lớp</th>
									<th>Tên lớp</th>
									<th>Danh sách học viên</th>
									
								</tr>
							</thead>
							
							<tbody>
								<% if (!listClass) { %>
								<p>Không có lớp để hiển thị</p>
								<% } else { %>
								<% for (var i = 0; i< listClass.length; i++) {%>
								<tr>
									<td><%= i + 1 %></td>
									<td><%= listClass[i].classid %></td>
									<td><%= listClass[i].classname %></td>
									<% var href = "/admin/class/" + listClass[i]._id%>
									<td>
										<a style="text-decoration: none; font-style: italic;" href="<%= href %>" > Xem chi tiết</a>
									</td> 
									<td>
										<a class="btn btn-primary btn-sm btn-update " href="javascript:;"
											role="button">
											<i class="fa fa-pencil" aria-hidden="true"></i>
										</a>
									</td>
									<td>
										<a class="btn btn-danger btn-sm btn-delete " href="javascript:;"
											role="button">
											<i class="fa fa-trash" aria-hidden="true"></i>
										</a>
									</td>
									<td>	
										<button type="submit" class="btn-save">Save</button>
										<button type="submit" class="btn-cancel">Cancel</button>
									</td>
								</tr>
								<% } %>
								<% } %>
							</tbody>
						</table>
